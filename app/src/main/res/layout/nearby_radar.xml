<?xml version="1.0" encoding="utf-8"?>
<com.campbellapps.christiancampbell.peoplemonv1.Views.NearbyView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="People That Are Nearby"
        android:layout_gravity="center"
        />


    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/text2"
        android:id="@+id/recycler_view2"
        android:scrollbars="vertical"

        >


    </android.support.v7.widget.RecyclerView>


</com.campbellapps.christiancampbell.peoplemonv1.Views.NearbyView>